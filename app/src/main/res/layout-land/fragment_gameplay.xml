<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameplay_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    tools:context=".MainActivity">

    <!-- Left side - Team 1 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin">

        <TextView
            android:id="@+id/T1Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Team1 Name"
            android:textSize="@dimen/text_size_large"
            android:paddingBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/Team1Score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:clickable="true"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/GS1Miss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:layout_marginEnd="8dp"
                        android:text="GS Miss" />

                    <Button
                        android:id="@+id/GS1"
                        android:layout_width="wrap_content"
                        android:minWidth="90dp"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:text="GS" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/GA1Miss"
                        android:layout_width="wrap_content"
                        android:minWidth="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="GA Miss" />

                    <Button
                        android:id="@+id/GA1"
                        android:layout_width="wrap_content"
                        android:minWidth="90dp"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:text="GA" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Middle section - Game controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/activity_margin">

        <TextView
            android:id="@+id/GameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GameTitle"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_large" />

        <LinearLayout
            android:id="@+id/MiddleTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <TextView
                    android:id="@+id/TimeRem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:text="00:00"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_large"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/GameMode"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="89dp"
                    android:text="15m,4Q"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/QuarterNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:text="Quarter"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/ResetGame"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ResetGame"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/UndoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undo"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/bSubPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnStartGame"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="Start"
                android:backgroundTint="@android:color/holo_green_light"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/centrePassCircle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/centre_pass_circle"
            android:alpha="0.5"
            android:visibility="invisible"
            android:contentDescription="@string/centre_pass_indicator" />
    </LinearLayout>

    <!-- Right side - Team 2 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin">

        <EditText
            android:id="@+id/T2Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Team2 Name"
            android:textSize="@dimen/text_size_large"
            android:paddingBottom="4dp"
            android:inputType="text"
            android:autofillHints="name"
            android:importantForAutofill="yes"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/Team2Score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:clickable="true"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/GS2Miss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:layout_marginEnd="8dp"
                        android:text="GS Miss" />

                    <Button
                        android:id="@+id/GS2"
                        android:layout_width="wrap_content"
                        android:minWidth="90dp"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:text="GS" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/GA2Miss"
                        android:layout_width="wrap_content"
                        android:minWidth="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="GA Miss" />

                    <Button
                        android:id="@+id/GA2"
                        android:layout_width="wrap_content"
                        android:minWidth="90dp"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        android:text="GA" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>