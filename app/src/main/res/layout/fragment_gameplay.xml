<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/gameplay_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    tools:context=".MainActivity">

<LinearLayout
android:id="@+id/TitleTable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

<TextView
android:id="@+id/GameTitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="GameTitle"
android:textAlignment="center"
android:textSize="24sp" />
    </LinearLayout>

    <!-- TopTable Section (Team 1) -->
<LinearLayout

android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_marginTop="10dp"
android:padding="5dp"
android:visibility="visible">

<TextView
    android:id="@+id/T1Name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Team1 Name"
    android:textSize="20sp"
    android:paddingBottom="4dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/Team1Score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:clickable="true"
        android:textAlignment="center"
        android:textSize="80sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/GS1Miss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:layout_marginEnd="15dp"
                android:text="GS Miss" />

            <Button
                android:id="@+id/GS1"
                android:layout_width="wrap_content"
                android:minWidth="110dp"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:text="GS" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/GA1Miss"
                android:layout_width="wrap_content"
                android:minWidth="80dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="GA Miss" />

            <Button
                android:id="@+id/GA1"
                android:layout_width="wrap_content"
                android:minWidth="110dp"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:text="GA" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>

    <!-- MiddleTable Section -->
<LinearLayout
android:id="@+id/MiddleTable"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:paddingTop="10dp"
android:paddingBottom="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical|fill_horizontal"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <TextView
        android:id="@+id/TimeRem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/GameMode"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:minWidth="89dp"
        android:text="15m,4Q"
        android:textAlignment="center"
        android:textSize="20sp" />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical|fill_horizontal"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/QuarterNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80dp"
        android:text="Quarter"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/ResetGame"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ResetGame"
        android:textSize="20sp" />

</LinearLayout>
</LinearLayout>

    <!-- BottomTable Section (Team 2) -->
    <LinearLayout
        android:id="@+id/TopTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/T2Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Team2 Name"
            android:textSize="20sp"
            android:paddingBottom="4dp"
            android:inputType="text"
            android:autofillHints="name"
            android:importantForAutofill="yes"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/Team2Score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:clickable="true"
                android:textAlignment="center"
                android:textSize="80sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/GS2Miss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:layout_marginEnd="15dp"
                        android:text="GS Miss" />

                    <Button
                        android:id="@+id/GS2"
                        android:layout_width="wrap_content"
                        android:minWidth="110dp"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:text="GS" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/GA2Miss"
                        android:layout_width="wrap_content"
                        android:minWidth="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:text="GA Miss" />

                    <Button
                        android:id="@+id/GA2"
                        android:layout_width="wrap_content"
                        android:minWidth="110dp"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:text="GA" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/UndoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"/>
            <Button
                android:id="@+id/bSubPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:layout_constraintStart_toEndOf="@+id/btnStartGame"
                app:layout_constraintTop_toTopOf="@+id/btnStartGame"
                app:layout_constraintVertical_bias="0.0" />
        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Start"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/centrePassCircle"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/centre_pass_circle"
        android:alpha="0.5"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:contentDescription="@string/centre_pass_indicator" />
</LinearLayout>
